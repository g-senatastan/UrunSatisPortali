
@{
    ViewData["Title"] = "Register";
}

<div class="row mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card mb-2">
            <div class="card-header"><h3>Kayıt Ol</h3></div>
            <div class="card-body">
                <div class="mb-2">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" id="txtFullName" />
                </div>
                <div class="mb-2">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="txtUserName" />
                </div>
                <div class="mb-2">
                    <label>E-Posta</label>
                    <input type="text" class="form-control" id="txtEmail" />
                </div>
                <div class="mb-2">
                    <label>Parola</label>
                    <input type="password" class="form-control" id="txtPassword" />
                </div>
                <div class="mb-2">
                    <label>Parola Tekrar</label>
                    <input type="password" class="form-control" id="txtPasswordConfirm" />
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" id="btnRegister">Kayıt Ol</button>
                <button class="btn btn-primary" id="btnLogin">Oturum Aç</button>
            </div>
        </div>
        <div id="result"></div>
    </div>

</div>


@section Scripts{

    <script>
        //Anket ajax
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";


            $("#btnRegister").click(function () {
                var fullName = $("#txtFullName").val();
                var userName = $("#txtUserName").val();
                var email = $("#txtEmail").val();
                var password = $("#txtPassword").val();
                var passwordConfirm = $("#txtPasswordConfirm").val();

                var user = new Object();
                user.FullName = fullName;
                user.UserName = userName;
                user.Email = email;
                user.Password = password;
                user.PasswordConfirm = passwordConfirm;


                $.ajax({
                    url: ApiBaseUrl + "User/Add",
                    method: "POST",
                    data: JSON.stringify(user),
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            localStorage.setItem("token", data.message);
                            location.href = "/Home";
                        } else {
                            $("#result")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(3000);

                        }
                    },
                    error: function () { }
                });

            });


            $("#btnLogin").click(function () {


                location.href = "Login";


            });


        });



    </script>
}

